<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ChangeUsernameMenu"
            stylesheets="@../CSS/menuStyle.css"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <VBox styleClass="menuBox">
            <Label fx:id="messageLabel" styleClass="messageText"/>
        </VBox>
    </top>
    <center>
        <VBox styleClass="menuBox">
            <TextField fx:id="newUsername" promptText="new username" styleClass="lineField"/>
            <PasswordField fx:id="password" promptText="password" styleClass="lineField"/>
            <Button text="change" styleClass="menuButton" onMouseClicked="#changeUsername"/>
            <Button text="cancel" styleClass="menuButton" onMouseClicked="#cancel"/>
        </VBox>
    </center>
</BorderPane>
